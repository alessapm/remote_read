<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Remote Read</title>
  <link rel="stylesheet" href="">
</head>

<body>
  <% include ../partials/nav %>
  <div class ='add-new-area'>
    <a href='/'>Home</a>
  </div>
  <div class = 'all-groups'>
    <% groups.forEach((group) => { %>
      <div class="group-area">
        <h1><a href="/groups/<%= group.id %>"><%= group.group_name %></a></h1>
        <form method="POST" action="/users/<%= user_id %>/groups/<%= group.id %>?_method=DELETE">
          <input type="hidden" value="<%= group.id %>">
          <button type="submit">Leave Group</button>
        </form>
      </div>

    <% }) %>
  </div>
</body>

</html>
